@let(
  className = 'rounded-lg overflow-hidden border border-slate-200/60 bg-white text-slate-700 shadow-sm mb-3 h-[420px] flex flex-col'
)

<div {{ $props.merge({ class: [className] }).except(['movie']).toAttrs() }}>
  @if ($slots.picture)
    <div class="h-[220px] overflow-hidden">
      {{{ await $slots.picture() }}}
    </div>
  @endif

  <div class="p-4 flex-1 flex flex-col justify-between">
    {{{ await $slots.main() }}}
  </div>
</div>
